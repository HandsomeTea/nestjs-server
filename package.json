{
    "name": "nestjs-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "upgrade": "./node_modules/.bin/npm-check -u",
        "create": "nest g",
        "struct": "npx @compodoc/compodoc -p tsconfig.json -s",
        "commit": "./node_modules/cz-customizable/standalone.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HandsomeTea/nestjs-server.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/HandsomeTea/nestjs-server/issues"
    },
    "homepage": "https://github.com/HandsomeTea/nestjs-server#readme",
    "dependencies": {
        "@nestjs/apollo": "^11.0.6",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.2",
        "@nestjs/core": "^9.0.0",
        "@nestjs/graphql": "^11.0.6",
        "@nestjs/mapped-types": "*",
        "@nestjs/mongoose": "^9.2.2",
        "@nestjs/platform-express": "^9.4.2",
        "@nestjs/sequelize": "^9.0.2",
        "@nestjs/terminus": "^9.2.2",
        "@svtslv/nestjs-ioredis": "^1.0.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "express-http-context": "^1.2.4",
        "graphql": "^16.7.1",
        "graphql-query-complexity": "^0.12.0",
        "graphql-subscriptions": "^2.0.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.0",
        "log4js": "^6.9.1",
        "pg": "^8.11.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "sequelize-typescript": "^2.1.5"
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.21",
        "@nestjs/cli": "^9.5.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.4.2",
        "@types/express": "^4.17.13",
        "@types/ioredis": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "commitizen": "^4.3.0",
        "cz-customizable": "^7.0.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "npm-check": "^6.0.1",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "forceExit": true,
        "detectOpenHandles": true,
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run test && npm run commit",
            "pre-push": "git status"
        }
    }
}
